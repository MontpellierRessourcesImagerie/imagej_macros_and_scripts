	run("Run Pixel Classification Prediction", pixelClassificationArgs);
	neuriteMaskToSelection();
	segmentationImage = getImageID();
	selectImage(h5Image);
	close();
	selectImage(imageID);
	count = roiManager("count");
	if (count>0) run("From ROI Manager");
 	roiManager("reset");
